{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "kafka.amazonaws.com"
      },
      "Action": [
        "kafka-cluster:Connect",
        "kafka-cluster:AlterCluster",
        "kafka-cluster:DescribeCluster"
      ],
      "Resource": "arn:aws:kafka:us-east-1:850995574711:cluster/swarm-db-cluster/4f695e58-2a1f-49d6-b745-d8bb805da5c0-s3"
    },
    {
      "Effect": "Allow",
      "Action": [
        "kafka-cluster:DescribeTopic",
        "kafka-cluster:CreateTopic",
        "kafka-cluster:WriteData",
        "kafka-cluster:ReadData"
      ],
      "Resource": [
        "arn:aws:kafka:us-east-1:850995574711:topic/swarm-db-cluster/4f695e58-2a1f-49d6-b745-d8bb805da5c0-s3/sensor-data-topic",
        "arn:aws:kafka:us-east-1:850995574711:topic/swarm-db-cluster/4f695e58-2a1f-49d6-b745-d8bb805da5c0-s3/sensor-maintenance-topic",
        "arn:aws:kafka:us-east-1:850995574711:topic/swarm-db-cluster/4f695e58-2a1f-49d6-b745-d8bb805da5c0-s3/sensor-monitoring-logs-topic"
      ]
    },
    {
      "Effect": "Allow",
      "Action": ["kafka-cluster:AlterGroup", "kafka-cluster:DescribeGroup"],
      "Resource": "arn:aws:kafka:us-east-1:850995574711:group/swarm-db-cluster/4f695e58-2a1f-49d6-b745-d8bb805da5c0-s3/swarm-db-consumer-group"
    }
  ]
}
